<body>
    <div class="main-container">
        <h1>Button Interaction Examples</h1>
        <p class="subtitle">Click the buttons to see what happens. I made this to test buttons!</p>
        
        <div class="example-section">
            <h2>1. Counter Button</h2>
            <p class="description">This counts how many times you click it.</p>
            <table class="align-table">
                <tr>
                    <td><button class="my-button" onclick="handleCounterClick()">Click Me</button></td>
                    <td><span class="counter-display" id="counterValue">0</span></td>
                </tr>
            </table>
        </div>
        
        <div class="example-section">
            <h2>2. Input Display</h2>
            <p class="description">Type something and click to see it in a popup.</p>
            <input type="text" id="userInput" class="text-input" placeholder="Type here..." onkeyup="checkIfInputEmpty()">
            <div class="spacing-div">
                <button class="my-button" id="showInputBtn" onclick="showInputInAlert()" disabled>Show My Text</button>
            </div>
        </div>
        
        <div class="clear"></div>
        
        <div class="example-section">
            <h2>3. Toggle Button</h2>
            <p class="description">Click to switch between on and off.</p>
            <button class="my-button outline-button" id="toggleBtn" onclick="handleToggle()">OFF</button>
            <div class="spacing-div">
                <div class="toggle-circle toggle-off" id="toggleCircle">OFF</div>
            </div>
        </div>
        
        <div class="example-section">
            <h2>4. Show/Hide Items</h2>
            <p class="description">Click to show or hide the list.</p>
            <button class="my-button" id="showHideBtn" onclick="handleShowHide()">Show Items</button>
            <ul id="hiddenList" class="items-list" style="display: none;">
                <li class="item-li">Item 1</li>
                <li class="item-li">Item 2</li>
                <li class="item-li">Item 3</li>
            </ul>
        </div>
        
        <div class="clear"></div>
        
        <div class="example-section wide-section">
            <h2>5. Progress Indicator</h2>
            <p class="description">Click to add progress, it resets at 100%.</p>
            <div class="progress-container">
                <div class="progress-bar-fill" id="progressBar"></div>
            </div>
            <table class="align-table">
                <tr>
                    <td><button class="my-button" id="progressBtn" onclick="handleProgress()">Add Progress</button></td>
                    <td><span class="progress-text" id="progressValue">0%</span></td>
                </tr>
            </table>
        </div>
    </div>

    <script>
        var counter = 0;
        var toggleState = false;
        var showItems = false;
        var progress = 0;
        
        function handleCounterClick() {
            counter = counter + 1;
            var counterElement = document.getElementById('counterValue');
            counterElement.innerHTML = counter;
        }
        
        function checkIfInputEmpty() {
            var inputValue = document.getElementById('userInput').value;
            var button = document.getElementById('showInputBtn');
            if (inputValue.trim() === '') {
                button.disabled = true;
            } else {
                button.disabled = false;
            }
        }
        
        function showInputInAlert() {
            var inputText = document.getElementById('userInput').value;
            alert('You entered: ' + inputText);
            document.getElementById('userInput').value = '';
            document.getElementById('showInputBtn').disabled = true;
        }
        
        function handleToggle() {
            toggleState = !toggleState;
            var button = document.getElementById('toggleBtn');
            var circle = document.getElementById('toggleCircle');
            
            if (toggleState === true) {
                button.innerHTML = 'ON';
                button.className = 'my-button';
                circle.innerHTML = 'ON';
                circle.className = 'toggle-circle toggle-on';
            } else {
                button.innerHTML = 'OFF';
                button.className = 'my-button outline-button';
                circle.innerHTML = 'OFF';
                circle.className = 'toggle-circle toggle-off';
            }
        }
        
        function handleShowHide() {
            showItems = !showItems;
            var button = document.getElementById('showHideBtn');
            var list = document.getElementById('hiddenList');
            
            if (showItems === true) {
                button.innerHTML = 'Hide Items';
                list.style.display = 'block';
            } else {
                button.innerHTML = 'Show Items';
                list.style.display = 'none';
            }
        }
        
        function handleProgress() {
            if (progress < 100) {
                progress = progress + 20;
            } else {
                progress = 0;
            }
            
            var bar = document.getElementById('progressBar');
            bar.style.width = progress + '%';
            
            var text = document.getElementById('progressValue');
            text.innerHTML = progress + '%';
            
            var btn = document.getElementById('progressBtn');
            if (progress < 100) {
                btn.innerHTML = 'Add Progress';
            } else {
                btn.innerHTML = 'Reset Progress';
            }
        }
    </script>
</body>
</html>
